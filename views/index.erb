<!doctype html>
<html>
  <head>
    <title><%= 'Hi, How are you' %></title>
    <link href="/style.css" rel="stylesheet">
    
  </head>
  <body id="time">
  <script type="text/javascript">
      now = new Date()
      document.getElementById("time").innerHTML = now.toDateString();
    </script>
    <h1 id = "when">
      <script type="text/javascript">
      now = new Date()
      if (now.getHours() >= 18){
        text = "Good Evening";
      }
      else if(now.getHours() >=12){
        text = "Good Afternoon";
      }
      else if(now.getHours() >= 6){
        text = "Good Morning";
      }
      else if(now.getHours() >= 0){
        text = "Time to sleep";
      }
      document.getElementById("when").innerHTML = text;
    </script>
    </h1>
  </body>
</html>